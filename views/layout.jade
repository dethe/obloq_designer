!!! 5
//- Manifest is for offline support
html.no-js(lang="en")
  head
    meta(charset="utf-8")
    - if (typeof(title) !== 'undefined')
      title #{title}
    - else
      title oBloq Application
    //- begin iPhone webapp data
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="viewport", content="width=device-width; height=device-height; initial-scale=1.0; maximum-scale=1.0; user-scalable=no;")
    //- Next line should point to 57x57 icon
    link(rel="apple-touch-icon-precomposed", href="icon.png")
    //- Next line should point to 320x460 image
    link(rel="apple-touch-startup-image", href="default.png")
    //- end iPhone webapp data
    //- Opt out of MS-crap
    meta(name="MSSmartTagsPreventParsing", content="true")
    //- Opt into awesome
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    link(rel="stylesheet", type="text/css", media="all", href="/lib/oocss.css")
    link(rel="stylesheet", type="text/css", media="all", href="/stylesheets/obloq.css")
    link(rel="alternate", type="application/atom+xml", title="Atom feed", href="/feed/")
  body
    .page
      .head
        != partial('head')
      .body
        nav.leftCol
          != partial('nav_mod', {collection: nav_lists, as: global})  
        .rightCol
        .main
          != partial('tabs')
          != body
      .foot
    script(type="text/javascript", src="/lib/modernizr-1.5.min.js")
    script(type="text/javascript", src="/lib/jquery-1.4.2.min.js")
    script(type="text/javascript", src="/javascripts/obloq.js")
